{
    "name": "izzle/translation",
    "description": "Izzle Translation Library and Classes",
    "keywords": ["translation", "i18n"],
    "homepage": "http://www.izzle.org",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Izzle",
            "email": "daniel@izzle.org",
            "homepage": "http://www.izzle.org",
            "role": "Founder"
        }
    ],
    "require": {
        "php": ">=7.1",
        "hassankhan/config": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload" : {
        "psr-4" : {
            "Izzle\\Translation\\" : "src/",
            "Izzle\\Translation\\Test\\" : "tests/"
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist",
        "phpcs-dry": "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist -v --dry-run --using-cache=no"
    }
}
